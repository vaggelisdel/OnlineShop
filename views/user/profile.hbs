<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h1>User Profile</h1>
        <hr>
        <h2>My Orders</h2>
        {{# each orders }}
            <div class="panel panel-default">
                <div class="panel-body">
                    <ul class="list-group">
                        {{# each this.items }}
                            <li class="list-group-item">
                                <span class="badge">{{ this.price }}&euro;</span>
                                {{ this.item.name }}
                                <span class="label label-primary">QTY: {{this.qty}}</span>
                            </li>
                        {{/each}}
                    </ul>
                </div>
                <div class="panel-footer">
                    <strong>Total Price: {{ this.cart.totalPrice }}&euro;</strong>
                    <span style="float: right">Created: {{ this.timestamp }}</span>
                </div>
            </div>
        {{/each}}
    </div>
</div>